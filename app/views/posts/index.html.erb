<div id="posts">
    <div class="container">
        <div class="row">
              <% if @posts.present? %>
                <% @posts.each do |post| %>
                <div class="col-md-4">
                  <div class="posts-item">
                    <div class="post-preview" style='background: url("<%= post.image.url %>") no-repeat; background-size: cover; background-position: center;'></div>
                        <%= image_tag post.author.avatar.url(:thumb), class: 'avatar'%>
                    <p class="about-post">
                      <i>
                        Created <%= post.created_at.strftime("%B %d, %Y") %> <br /> 
                        by <%= post.author.name %>
                      </i>
                    </p>
                    <div class="description">
                      <h2><%= post.title %></h2>
                      <%= link_to post_path(post) do %>
                        <button class="read-more">Read more</button>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
            <p>There are no posts <%= params[:search] %>.</p>
          <% end %>
          <div class="clearfix"></div>
          <div class="text-center"><%= paginate @posts %></div>
        </div>
    </div>
</div>
