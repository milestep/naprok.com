<div class="section-5" id='5'>
  <div class="col-5 left hiden-sm"></div>
  <div class="col-5 bg-form">
    <div class="col-4 contact-form">
      <div class="head">LET'S START</div>
      <div class="body">Write your message to contact us and discuss the details of the cooperation</div>
      <%= form_tag( "/contact", method: "post", id: 'my-form', onsubmit: 'return false', target: "_top" )  do %>
        <input type="email" class='text-input' name="email" placeholder="email" [value]="contactEmail" required><br>
        <input type="text" class='text-input' name="message" placeholder="message" [value]="contactMessage" required><br>
        <input type="submit" class='submit-input' onclick="sendMessage()" value="SEND MESSAGE">
      <% end %>
    </div>
  </div>
</div>
